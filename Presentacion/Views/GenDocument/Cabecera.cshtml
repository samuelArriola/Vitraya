@{
    string nomDocument = Model[0];
    string codigo = Model[1];
    string fecha = Model[2];
    string version = Model[3];
}

<!DOCTYPE html>
<html>
<head>
    <script>
        function subst() {
            var vars = {};
            var query_strings_from_url = document.location.search.substring(1).split('&');
            for (var query_string in query_strings_from_url) {
                if (query_strings_from_url.hasOwnProperty(query_string)) {
                    var temp_var = query_strings_from_url[query_string].split('=', 2);
                    vars[temp_var[0]] = decodeURI(temp_var[1]);
                }
            }
            var css_selector_classes = ['page', 'frompage', 'topage', 'webpage', 'section', 'subsection', 'date', 'isodate', 'time', 'title', 'doctitle', 'sitepage', 'sitepages'];
            for (var css_class in css_selector_classes) {
                if (css_selector_classes.hasOwnProperty(css_class)) {
                    var element = document.getElementsByClassName(css_selector_classes[css_class]);
                    for (var j = 0; j < element.length; ++j) {
                        element[j].textContent = vars[css_selector_classes[css_class]];
                    }
                }
            }
        }
    </script>
    <style>
        * {
            font-family: Arial !important;
        }

        p, h1, h2, h3, h4, h5, h6 {
            margin: 0;
            margin-bottom: 0px;
        }

        table tr {
            page-break-inside: avoid !important;
        }

        body {
            font-size: 10px;
            font-family: Arial, Helvetica, sans-serif;
            overflow: visible;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }


        .text-center {
            text-align: center;
        }

        table {
            max-width: 2000px !important;
            margin-bottom: 8px;
        }

        #tbContenido > div {
            display: flex;
            justify-content: space-between;
            position: relative;
            width: 100%
        }

            #tbContenido > div > div:nth-child(1) {
                padding-right: 4px;
                z-index: 4;
                background: #fff
            }

            #tbContenido > div > div:nth-child(2) {
                position: absolute;
                width: 100%;
                border-bottom: dashed 1px #000;
                bottom: 10px;
                z-index: 1
            }

            #tbContenido > div > div:nth-child(3) {
                padding-left: 4px;
                z-index: 4;
                background: #fff
            }

        .hoja {
            height: 849px;
            overflow: hidden;
            padding: 2.54cm 0;
            box-sizing: unset;
        }

        .margen {
            width: 2.54cm;
            padding: 0;
            margin: 0;
            border: 0;
        }

        table {
            width: 100% !important;
            height: auto !important;
        }


        td, th {
            width: auto;
            height: auto !important;
            border: solid 1px #000;
            padding: 3px !important;
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-row-group
        }

        tr > td:last-child strong {
            margin-right: 9px;
        }
    </style>
</head>
<body style="border:0; margin: 8px;" onload="subst()">
    <div style="text-align:center">
        <table style="margin-bottom: 10px">
            <tbody>
                <tr>
                    <td rowspan="4"><img src="../Images/logocrecer.png" width="150" /></td>
                    <td><p><strong>CENTRO MÉDICO CRECER</strong></p></td>
                    <td style="width: 200px"><p><strong>Código:</strong>@codigo.ToUpper()</p></td>
                </tr>
                <tr>
                    <td><p><strong>SISTEMA DE GESTIÓN DOCUMENTAL</strong></p></td>
                    <td><p><strong>Versión:</strong>@version </p></td>
                </tr>
                <tr>
                    <td rowspan="2"><p><strong>@nomDocument.ToUpper()</strong></p></td>
                    <td><p><strong>Emisión:</strong>@fecha</p></td>
                </tr>
                <tr>
                    <td><p><strong>Página:</strong><span class="page"></span> de <span class="topage"></span></p></td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>



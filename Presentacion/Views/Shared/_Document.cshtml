<!DOCTYPE html>

<html>
<head>
   
    <title>@ViewBag.Title</title>
    <style>
        * {
            font-family: Arial !important;
            line-height: 12pt;
           
        }

        p, h1, h2, h3, h4, h5, h6 {
            margin: 0;
            margin-bottom: 8px;
            line-height: 12pt;
            text-align: justify;
        }

        tr, td, th {
            page-break-inside: avoid !important;
        }

        body {
            font-size: 12pt;
            font-family: Arial, Helvetica, sans-serif;

        }

        table, th, td {
            border-collapse: collapse;
        }

        th, td {
            padding: 4px;
            height: auto !important;
            width: auto;
            vertical-align: middle !important;
        }

        .text-center {
            text-align: center;
        }

        table {
            margin-bottom: 8px;
        }

        #tbContenido > div {
            display: flex;
            justify-content: space-between;
            position: relative;
            width: 100%
        }

        #tbContenido > div > div:nth-child(1) {
            padding-right: 4px;
            z-index: 4;
            background: #fff
        }

        #tbContenido > div > div:nth-child(2) {
            position: absolute;
            width: 100%;
            border-bottom: dashed 1px #000;
            bottom: 10px;
            z-index: 1
        }

        #tbContenido > div > div:nth-child(3) {
            padding-left: 4px;
            z-index: 4;
            background: #fff
        }

        .hoja {
            height: 849px;
            overflow: hidden;
            padding: 2.54cm 0;
            box-sizing: unset;
        }

        .borderer{
            border: solid 1px #000;
        }
        .tableBorderer td {
            border: solid 1px #000 !important;
        }
        .margen {
            width: 2.54cm;
            padding: 0;
            margin: 0;
            border: 0;
        }

        table {
            max-height: 500px !important;
            width: 100% !important;
            height: auto !important;
            margin-left: 0 !important;
            margin-right: 0 !important;
        }


        td, th {
            padding: 4px;
            width: auto;
            height: auto;
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-row-group
        }
        img, image{
            max-width: 100%;
        }

        .tableContainer > td{
            padding: 15px;
        }
        .tableContainer p{
            margin: 3px;
        }
        .tbDefiniciones > td{
            text-align: left;
        }
        .tbDefiniciones table, .tbDefiniciones td{
        }
        .tbDefiniciones td{
            padding: 13px;
        }
        
       @@media print {
            tfoot
            {
                display: table-row-group
            }
            thead {
                display: table-header-group
            }
            tr, td, th {
                page-break-inside: avoid !important;
                white-space: nowrap;
                margin: 4px 0 4px 0;
            }

            table tbody tr td:before,
            table tbody tr td:after {
                content: "";
                height: 4px;
                display: block;
            }
       }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
